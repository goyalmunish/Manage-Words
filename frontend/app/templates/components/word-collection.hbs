<h2>Filters</h2>
<div>
  <span>{{input type='text' value=word_search placeholder="Word Search Pattern"}}</span>
  <span>{{input type='text' value=full_search placeholder="Full Search Pattern"}}</span>
</div>
<h2>Listing Words</h2>
<p><span>No. of words: </span><span>{{filteredWords.length}}</span></p>
<table>
  <tr>
    <th>Id</th>
    <th>Word</th>
    <th>Flags</th>
    <th>Dictionaries</th>
    <th>Trick</th>
  </tr>
  {{#each filteredWords as |word|}}
    <tr>
      <td>{{word.id}}</td>
      <td>
        {{#link-to word-link word}}
          {{word.word}}
        {{/link-to}}
      </td>
      <td>
        {{component 'word-flags' word=word}}
      </td>
      <td></td>
      <td>{{word.trick}}</td>
    </tr>
  {{/each}}
</table>
