<h1>Flags</h1>
<div class="div2">
  <h2>Links</h2>
  <%= link_to 'New Flag', new_flag_path, {:class => "btn btn-primary"} %>
</div>
<div class="div2">
  <% cache(flags_index_fragment_name) do %>
      <h2>Listing Flags</h2>

      <p class="text-info">Listing all flags:</p>
      <table class="table table-bordered table-hover table-condensed">
        <thead>
        <tr>
          <!--<th>User</th>-->
          <th>Id</th>
          <th>Name - Value</th>
          <th>Desc</th>
          <th>Words</th>
          <!--<th colspan="3"></th>-->
        </tr>
        </thead>

        <tbody>
        <% @flags.each do |flag| %>
            <tr>
              <td><%= flag.id %></td>
              <td><%= link_to flag_name_and_value(flag), flag, {:class => "btn btn-default"} %></td>
              <td><%= flag.desc %></td>
              <td><%= link_to 'Show', flag_words_path(flag), {:class => "btn btn-primary"} %></td>
              <!--<td><%= link_to 'Show', flag %></td>-->
              <!--<td><%= link_to 'Edit', edit_flag_path(flag) %></td>-->
              <!--<td><%= link_to 'Destroy', flag, method: :delete, data: {confirm: 'Are you sure?'} %></td>-->
            </tr>
        <% end %>
        </tbody>
      </table>
  <% end %>
</div>

<br>
