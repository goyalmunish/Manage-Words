<h2>Listing Flags:</h2>
<table>
  <tr>
    <th>Id</th>
    <th>Flag</th>
    <th>Words</th>
  </tr>
  {{#each model as |flag|}}
    <tr>
      <td>{{flag.id}}</td>
      <td>
        {{#link-to 'flags.flag' flag}}
          {{flag.name}}-{{flag.value}}
        {{/link-to}}
      </td>
      <td>
        {{#link-to 'flag-words' flag}}
          <span>Words</span>
        {{/link-to}}
      </td>
    </tr>
  {{/each}}
</table>
{{outlet}}
