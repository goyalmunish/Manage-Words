<h1>Words </h1>
<div class="div2">
  <h2>Links</h2>
  <%= link_to 'New Word', new_word_path, {:class => "btn btn-primary"} %>
  <%= link_to 'Take Backup', words_path(:format => :download), {:class => "btn btn-info"} %>
  <%= link_to 'Restore Backup', backup_restore_form_words_path, {:class => "btn btn-info"} %>
</div>
<div class="div2">
  <h2>Listing Words</h2>

  <div class="div3">
    <h3>Reset all ordering and filtering: </h3>
    <%= link_to 'Reset', words_path(:reset => true), {:class => "btn btn-primary"} %>
    <%= link_to('Expire Caches', expire_caches_words_path, {:class => "btn btn-danger"}) %>
  </div>
  <div class="div3">
    <h3>Filters: </h3>
    <%= render 'words/current_filters', :filters => @filters %>
    <%= link_to 'Without Trick', words_path(:filter_by => 'without_trick'), {:class => "btn btn-info"} %>
    <%= link_to 'With Trick', words_path(:filter_by => 'with_trick'), {:class => "btn btn-info"} %>
    <%= render 'flags/filter_by_flag_links' %>
  </div>
  <div class="div3">
    <h3>Orders: </h3>
    <%= render 'words/current_order', :order => @order %>
    <%= link_to 'Random Order', words_path(:sort_by => 'random'), {:class => "btn btn-warning"} %>
    <%= link_to 'Recent First', words_path(:sort_by => 'recent'), {:class => "btn btn-warning"} %>
  </div>
  <div class="div3">
    <% cache(words_index_fragment_name(current_user.id, @filters, @order)) do %>
        <h3>Listing all words:</h3>
        <% if @words.empty? %>
            <p class="text-info"> Empty word list </p>
        <% else %>
            <table class="table table-bordered table-hover table-condensed">
              <thead>
              <tr>
                <th>Id</th>
                <th>Word</th>
                <th>Flags</th>
                <th colspan="1">Dictionaries</th>
                <th>Trick</th>
              </tr>
              </thead>
              <tbody>
              <% @words.each do |word| %>
                  <tr>
                    <td><%= word.id %></td>
                    <td><%= link_to word.word, word, {:class => "btn btn-default"} %></td>
                    <td><%= render 'word_flags_span', :word => word %></td>
                    <!--<td><%= link_to 'Show', word %></td>-->
                    <!--<td><%= link_to 'Edit', edit_word_path(word) %></td>-->
                    <!--<td><%= link_to 'Destroy', word, method: :delete, data: {confirm: 'Are you sure?'} %></td>-->
                    <td>
                      <%= render :partial => 'dictionary_links', :locals => {:dictionaries => @dictionaries, :phrase => word.word} %>
                    </td>

                    <td><%= word.trick %></td>

                  </tr>
              <% end %>
              </tbody>
            </table>
        <% end %>
    <% end %>
  </div>
</div>

<br>
