<h1>Words </h1>
<h2>Links</h2>
<%= link_to 'New Word', new_word_path, {:class => "btn btn-primary"} %>
<%= link_to 'Download', words_path(:format => :download), {:class => "btn btn-primary"} %>
<%= form_tag backup_restore_words_path, {:multipart => true, :method => :post} do %>
  <%= label_tag 'file', 'File' %>
  <%= file_field_tag 'file' %>
  <%= submit_tag 'Upload' %>
<% end %>
<h2>Listing Words</h2>
<h3>Reset all ordering and filtering: </h3>
<%= link_to 'Reset', words_path(:reset => true), {:class => "btn btn-danger"} %>
<h3>Filter words: </h3>
<%= link_to 'Without Trick', words_path(:without_trick => true), {:class => "btn btn-warning"} %>
<%= render 'flags/filter_by_flag_links' %>
<h3>Order words: </h3>
<%= link_to 'Random Order', words_path(:sort_by => 'rand'), {:class => "btn btn-warning"} %>
<h3>Listing all words:</h3>

<table class="table table-bordered table-hover table-condensed">
  <thead>
  <tr>
    <th>Word</th>
    <th>Flags</th>
    <th colspan="3">Dictionaries</th>
    <th>Trick</th>
  </tr>
  </thead>

  <tbody>
  <% @words.each do |word| %>
    <tr>
      <td><%= link_to word.word, word, {:class => "btn btn-default"} %></td>
      <td><%= render 'word_flags_span', :word => word %></td>
      <!--<td><%= link_to 'Show', word %></td>-->
      <!--<td><%= link_to 'Edit', edit_word_path(word) %></td>-->
      <!--<td><%= link_to 'Destroy', word, method: :delete, data: {confirm: 'Are you sure?'} %></td>-->

      <td><%= link_to 'Cambridge', Word.cambridge(word.word), {:target => '_blank'} %></td>
      <td><%= link_to 'Macmillan', Word.macmillan(word.word), {:target => '_blank'} %></td>
      <td><%= link_to 'Longman', Word.longman(word.word), {:target => '_blank'} %></td>

      <td><%= word.trick %></td>

      <!--<td><%= link_to 'Collins', Word.collins(word.word), {:target => '_blank'} %></td>-->
      <!--<td><%= link_to 'Merriam Webster', Word.merriam_webster(word.word), {:target => '_blank'} %></td>-->
      <!--<td><%= link_to 'Oxford Learner', Word.oxford_learner(word.word), {:target => '_blank'} %></td>-->
      <!--<td><%= link_to 'Dictionary.com', Word.dictionary_dot_com(word.word), {:target => '_blank'} %></td>-->
      <!--<td><%= link_to 'Google Search', Word.google_search(word.word), {:target => '_blank'} %></td>-->

    </tr>
  <% end %>
  </tbody>
</table>
